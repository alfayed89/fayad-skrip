= form_for @divisi, :html => {:class => 'form-horizontal'} do |f|
	- if @divisi.errors.any?
		#error_explanation.alert.alert-danger
			%h5= "#{pluralize(@divisi.errors.count, "error")} prohibited this divisi from being saved:"
			%ul
				- @divisi.errors.full_messages.each do |msg|
					%li= msg
	.control-group
		= f.label :nama, :class => 'control-label'
		.controls
			= f.text_field :nama
	.control-group
		= f.label :keterangan, :class => 'control-label'
		.controls
			= f.text_area :keterangan, :rows => '5', :class => 'input-xxlarge'
	.form-actions
		= f.submit 'Save', :class => 'btn btn-large btn-primary'
