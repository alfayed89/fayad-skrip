.row-fluid
	.span8.offset2
		%h1.center-text Login
		%hr
		=form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
			.form-horizontal
				.control-group
					=f.label :login , :class => "control-label"
					.controls
						= f.text_field :login, :class => 'input-xlarge'
				.control-group
					=f.label :password , :class => "control-label"
					.controls
						= f.password_field :password, :class => 'input-xlarge'
				-if devise_mapping.rememberable?
					.control-group
						.control-label
						.controls
							.form-inline
								=f.check_box :remember_me
								=f.label :remember_me
			.form-actions.center-text
				=f.button '<i class="icon icon-locked"></i> Masuk'.html_safe, :class => 'btn btn-primary'