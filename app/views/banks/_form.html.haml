= form_for @bank do |f|
  -if @bank.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bank.errors.count, "error")} prohibited this bank from being saved:"
      %ul
        - @bank.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nama
    = f.text_field :nama
  .field
    = f.label :account_number
    = f.text_field :account_number
  .field
    = f.label :account_nama
    = f.text_field :account_nama
  .field
    = f.label :cabang
    = f.text_field :cabang
  .field
    = f.label :karyawan_id
    = f.number_field :karyawan_id
  .actions
    = f.submit 'Save'
