= form_for @holyday, :html => {:class => 'form-horizontal'} do |f|
	- if @holyday.errors.any?
		#error_explanation.alert.alert-danger
			%h5= "#{pluralize(@holyday.errors.count, "error")} prohibited this holyday from being saved:"
			%ul
				- @holyday.errors.full_messages.each do |msg|
					%li= msg

	.control-group
		= f.label :karyawan_id, :class => 'control-label'
		.controls
			= f.number_field :karyawan_id
	.control-group
		= f.label :emergency_address, :class => 'control-label'
		.controls
			= f.text_area :emergency_address
	.control-group
		= f.label :from, :class => 'control-label'
		.controls
			= f.date_select :from
	.control-group
		= f.label :to, :class => 'control-label'
		.controls
			= f.date_select :to
	.control-group
		= f.label :emergency_phone, :class => 'control-label'
		.controls
			= f.text_field :emergency_phone
	.control-group
		= f.label :keterangan, :class => 'control-label'
		.controls
			= f.text_field :keterangan
	.control-group
		= f.label :subsitution_id, :class => 'control-label'
		.controls
			= f.number_field :subsitution_id
	.form-actions
		= f.submit 'Save'
