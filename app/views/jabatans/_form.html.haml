= form_for @jabatan, :html => {:class => 'form-horizontal'} do |f|
	- if @jabatan.errors.any?
		#error_explanation.alert.alert-danger
			%h5= "#{pluralize(@jabatan.errors.count, "error")} prohibited this jabatan from being saved:"
			%ul
				- @jabatan.errors.full_messages.each do |msg|
					%li= msg

	.control-group
		= f.label :divisi_id, :class => 'control-label'
		.controls
			= f.number_field :divisi_id
	.control-group
		= f.label :holyday_quota, :class => 'control-label'
		.controls
			= f.number_field :holyday_quota
	.control-group
		= f.label :keterangan, :class => 'control-label'
		.controls
			= f.text_field :keterangan
	.control-group
		= f.label :nama, :class => 'control-label'
		.controls
			= f.text_field :nama
	.form-actions
		= f.submit 'Save'
