= form_for @pengalaman , :html => {:class => 'form-horizontal'} do |f|
	- if @pengalaman.errors.any?
		#error_explanation.alert.alert-dangers
			%h2= "#{pluralize(@pengalaman.errors.count, "error")} prohibited this pengalaman from being saved:"
			%ul
				- @pengalaman.errors.full_messages.each do |msg|
					%li= msg

	.control-group
		= f.label :company, :class => 'control-label'
		.controls
			= f.text_field :campany
	.control-group
		= f.label :from, :class => 'control-label'
		.controls
			= f.date_select :from
	.control-group
		= f.label :to, :class => 'control-label'
		.controls
			= f.date_select :to
	.control-group
		= f.label :job_desc, :class => 'control-label'
		.controls
			= f.text_area :job_desc
	.control-group
		= f.label :job_title, :class => 'control-label'
		.controls
			= f.text_field :job_title
	.control-group
		= f.label :reason, :class => 'control-label'
		.controls
			= f.text_field :reason
	.control-group
		= f.label :karyawan_id, :class => 'control-label'
		.controls
			= f.number_field :karyawan_id
	.form-actions
		= f.submit 'Save'
